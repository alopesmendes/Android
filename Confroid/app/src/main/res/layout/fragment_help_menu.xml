<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".settings.help.fragments.HelpMenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/helpMenuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="@string/menu"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:id="@+id/helpToolBarImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help_1"
            app:layout_constraintStart_toEndOf="@+id/helpPointToolBarImage"
            app:layout_constraintTop_toBottomOf="@+id/helpMenuTitle" />

        <ImageView
            android:id="@+id/helpPointToolBarImage"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_left_point"
            app:layout_constraintBottom_toBottomOf="@+id/helpToolBarImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/helpMenuTitle" />

        <ImageView
            android:id="@+id/helpMenuImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/helpPointToolBarImage"
            app:layout_constraintTop_toBottomOf="@+id/helpToolBarImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>